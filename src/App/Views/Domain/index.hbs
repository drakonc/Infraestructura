<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Usuarios de Dominios</h1>
    <a href="/viewAddDomain" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus-square"></i> Crear Nuevo Usuario Dominio</a>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Listado de Usuarios de Dominio</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th width="10%">CODIGO</th>
                                <th width="40%">NOMBRE</th>
                                <th width="20%">USUARIO</th>
                                <th width="20%">CONTRASEÑA</th>
                                <th width="10%"></th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th width="10%">CODIGO</th>
                                <th width="40%">NOMBRE</th>
                                <th width="20%">USUARIO</th>
                                <th width="20%">CONTRASEÑA</th>
                                <th width="10%"></th>
                            </tr>
                        </tfoot>
                        <tbody>
                            {{#each data}}
                                <tr>
                                    <td width="10%">{{CODIGO}}</td>
                                    <td width="40%">{{NOMBRE}}</td>
                                    <td width="20%">{{USUARIO}}</td>
                                    <td width="20%">{{CONTRASENA}}</td>
                                    <td width="10%">
                                        <a href="/viewEditDomain/{{IDDOMINIO}}/{{CODIGO}}" class="btn btn-primary btn-circle"><i class="fas fa-edit"></i></a>
                                        <a href="/DeleteDomains/{{IDDOMINIO}}/{{CODIGO}}" class="btn btn-danger btn-circle"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            {{else}}
                                <div class="col-md-a mx-auto">
                                    <div class="card card-body text-center">
                                        <p>No hay Usuarios de Dominios Guardados Todavia Crea uno</p>
                                        <a href="/viewAddDomains">Crea Usuario de Dominio</a>
                                    </div>
                                </div>
                            {{/each}}
                        </tbody>   
                    </table>
                </div>                
            </div>
       </div>
    </div>
</div>